---
export interface Props {
  title?: string;
  prince?: string;
  description?: string;
  features?: any[];
}

const { title, cta, price, description, features } = Astro.props;
---

<div class="w-full lg:w-1/2 p-4">
  <div class="flex flex-col justify-between p-8 h-full bg-gray-100 rounded-3xl">
    <div class="flex-initial mb-8">
      <span
        class="inline-block mb-6 text-sm text-blue-500 font-bold uppercase tracking-widest"
      >
        {title ?? null}
      </span>
      <h2
        class="font-heading mb-2 text-4xl text-gray-900 font-black tracking-tight"
      >
        {price ?? null}
      </h2>
      <p class="mb-6 text-sm text-gray-400 font-bold">
        {description ?? null}
      </p>
      <div class="flex flex-wrap -m-2">
        <div class="w-full p-2">
          <a
            class="block w-full px-8 py-2.5 text-sm text-center text-white font-bold bg-blue-500 hover:bg-blue-600 focus:ring-4 focus:ring-blue-200 rounded-full"
            href="#"
          >
            {cta ?? null}
          </a>
        </div>
      </div>
    </div>
    <div class="flex-initial">
      <h4 class="font-heading mb-4 text-gray-900 font-bold">
        Whatâ€™s included:
      </h4>
      <p class="text-gray-500 font-bold">
        {features ?? null}
      </p>
    </div>
  </div>
</div>
