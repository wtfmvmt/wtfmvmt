---
import Links from "@includes/static/Footer/Links.astro";
export interface Props {
  links?: any[];
  title?: string;
  description?: string;
  emails?: {
    primary?: string;
    secondary?: string;
  };
}

export const defaultProps = {
  title: "[@props]: TITLE_NOT_FOUND",
  description: "[@props]: DESCRIPTION_NOT_FOUND",
  links: [
    ...new Array<LinkProps>(3).map((link) => ({
      name: `${link}`,
      url: "",
    })),
  ],
  emails: {
    primary: "[@props]: PRIMARY_EMAIL_NOT_FOUND",
    secondary: "[@props]: PRIMARY_EMAIL_NOT_FOUND",
  },
};

const { links, title, description, emails } = Astro.props;
---

<div class="flex flex-wrap -mx-4 text-black dark:text-white">
  <div class="w-full px-4 mb-16 xl:w-2/6 xl:mb-0">
    <div class="max-w-md">
      <h2 class="mb-10 text-4xl font-major_mono font-heading">
        {title ?? defaultProps.title}
      </h2>
      <p class="mb-6 font-light font-share_tech">
        {description ?? defaultProps.description}
      </p>
      <div class="pb-8 border-b border-gray-200 font-share_tech">
        <a class="inline-block text-indigo-500 hover:text-indigo-600" href="#"
          >{emails?.primary ?? defaultProps.emails.primary}</a
        >

        <a
          class="inline-block text-indigo-500 hover:text-indigo-600 font-share_tech"
          href="#">{emails?.secondary ?? defaultProps.emails.secondary}</a
        >
      </div>
      <div class="mt-8">
        <a class="inline-flex items-center mr-12" href="#">
          <img
            class="mr-4"
            src="wrexa-assets/logos/brands/messenger.svg"
            alt=""
          />
          <span class="font-light">chatshxxk</span>
        </a>
        <a class="inline-flex items-center" href="#">
          <img
            class="mr-4"
            src="wrexa-assets/logos/brands/snapchat.svg"
            alt=""
          />
          <span class="font-light">snapshxxk</span>
        </a>
      </div>
    </div>
  </div>

  {
    links?.map((link) => <Links {...link} />) ??
      defaultProps.links.map((link) => <Links {...link} />)
  }
</div>
