---
import type { LinkProps } from "@typings/Link";

export interface Props {
  title?: string;
  links?: LinkProps[];
}

export const defaultProps = {
  title: "[@props]: TITLE_NOT_FOUND",
  links: [],
};

const { title, links } = Astro.props;
---

<div class="w-1/2 px-4 mb-8 lg:w-1/4 xl:w-1/6 lg:mb-0">
  <h4 class="mb-6 font-major_mono text-black dark:text-white text-2xl">
    {title ?? defaultProps.title}
  </h4>
  <ul class="text-black font-share_tech text-lg dark:text-white">
    {
      links?.map((link, index) => (
        <li key={index} class="mb-4">
          <a class="inline-block font-light" href="#">
            {link?.name}
          </a>
        </li>
      ))
    }
  </ul>
</div>
