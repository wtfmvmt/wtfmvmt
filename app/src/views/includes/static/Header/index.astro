---
import Links from "@includes/static/Header/Links.astro";
import Favicon from "@includes/static/Header/Favicon.astro";

export interface Props {
  links?: LinksProps;
  favicon?: FaviconProps;
}

const { links, favicon } = Astro.props;
---

<section class="fixed top-0 w-full backdrop-blur-sm z-50">
  <nav class="relative px-6 py-4 sm:px-12">
    <Links {...links} />
    <div class="flex items-center 3xl:hidden">
      <Favicon {...favicon} />
      <button
        class="flex items-center justify-center ml-auto bg-white rounded-full navbar-burger w-14 h-14 hover:bg-gray-200"
      >
        <svg
          width="20"
          height="9"
          viewBox="0 0 20 9"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          ><line
            x1="0.75"
            y1="1.25"
            x2="19.25"
            y2="1.25"
            stroke="black"
            stroke-width="1.5"
            stroke-linecap="round"></line><line
            x1="0.75"
            y1="8.25"
            x2="13.25"
            y2="8.25"
            stroke="black"
            stroke-width="1.5"
            stroke-linecap="round"></line></svg
        >
      </button>
    </div>
    <div class="items-end justify-between hidden w-full 3xl:flex">
      <div class="w-auto">
        <a class="self-center inline-block" href="#">
          <img src="/assets/images/logo-transparent.png" alt="" width="auto" />
        </a>
      </div>
      <div class="w-auto">
        <div>
          <a
            class="inline-block w-full py-4 font-medium text-center text-white border border-white rounded sm:w-auto px-7 hover:border-gray-200 hover:text-gray-200"
            href="#">Get Started</a
          >
        </div>
      </div>
    </div>
  </nav>
  <div
    class="fixed top-0 bottom-0 left-0 z-50 hidden w-5/6 navbar-menu sm:max-w-xs"
  >
    <div class="fixed inset-0 bg-gray-800 navbar-backdrop opacity-80"></div>
    <nav
      class="relative flex flex-col w-full h-full pt-12 pb-40 overflow-y-auto bg-gray-200"
    >
      <div class="px-12">
        <div>
          <a class="inline-block mb-52" href="#">
            <img src="wrexa-assets/logos/logo-wrexa.svg" alt="" width="auto" />
          </a>
          <button type="button" aria-label="Close"></button>
        </div>
        <ul>
          <li class="mb-6">
            <a class="flex items-center justify-between" href="#">
              <span>Collection</span>
              <svg
                width="12"
                height="7"
                viewBox="0 0 12 7"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M10 2L6 6L2 2"
                  stroke="black"
                  stroke-width="1.5"
                  stroke-miterlimit="10"
                  stroke-linecap="square"
                  stroke-linejoin="round"></path>
              </svg>
            </a>
          </li>
          <li class="mb-6"><a class="inline-block" href="#">Projects</a></li>
          <li class="mb-16"><a class="inline-block" href="#">About</a></li>
          <li class="mb-6">
            <a class="inline-block" href="#">How to Start</a>
          </li>
          <li><a class="inline-block" href="#">Design</a></li>
        </ul>
      </div>
    </nav>
    <div class="absolute bottom-0 left-0 w-full">
      <a class="flex items-center pt-4 pb-5 pl-6 pr-4 bg-white" href="#">
        <div class="relative mr-4">
          <img
            class="w-12 h-12 rounded-full"
            src="wrexa-assets/images/avatar2.png"
            alt=""
          />
          <div
            class="absolute bottom-0 left-0 flex items-center justify-center w-6 h-6 -ml-2 text-xs text-white bg-green-800 rounded-full"
          >
            1
          </div>
        </div>
        <div class="pr-5 mr-auto">
          <h4 class="text-xs text-gray-400">Account</h4>
          <span>matloay</span>
        </div>
        <svg
          width="12"
          height="7"
          viewBox="0 0 12 7"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M10 2L6 6L2 2"
            stroke="black"
            stroke-width="1.5"
            stroke-miterlimit="10"
            stroke-linecap="square"
            stroke-linejoin="round"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
