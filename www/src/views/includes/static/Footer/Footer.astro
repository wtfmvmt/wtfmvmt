                      {link?.links
                        ? link?.links?.map((sub_link) => (
                            <li class="mb-4">
                              <a
                                class="inline-block text-gray-500 hover:text-gray-600 font-bold"
                                href={sub_link?.url ?? null}
                              >
                                {sub_link?.name ?? null}
                              </a>
                            </li>
                          ))
                        : null}
                    </ul>
                  </div>
                ))
          }
        </div>
      </div>
      <div class="flex flex-wrap justify-center items-center -m-1">
        <div class="w-auto p-1">
          <p class="text-black text-center font-medium">
            {copyright ?? defaultProps.copyright}
          </p>
        </div>
        <div class="w-auto p-1">
          <img class="h-12" src={favicon?.image?.src ?? defaultProps.favicon.image.src}
               alt={favicon?.image?.alt ?? defaultProps.favicon.image.alt} />
        </div>
      </div>
    </div>
  </div>
</section>
